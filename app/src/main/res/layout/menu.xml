<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp">
        <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:padding="20dp"
                        android:text="AddCity"
                        android:layout_width="110dp"
                        android:layout_height="67dp" android:id="@+id/menu_button_add_city"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView

                        android:text="Favorite Cities"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/menu_favorite_cities"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="99dp"
                        app:layout_constraintEnd_toStartOf="@+id/menu_button_add_city"
                        android:layout_marginRight="99dp" android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:id="@+id/menu_delete_city"
                        android:padding="20dp"
                        android:text="Delete"
                        android:layout_width="110dp"
                        android:layout_height="67dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView

                        android:text="Favorite City"
                        android:textSize="25sp"
                        android:layout_width="222dp"
                        android:layout_height="28dp" android:id="@+id/menu_favorite_city1"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/menu_delete_city" android:layout_marginEnd="29dp"
                        android:layout_marginRight="29dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


            </TableRow>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>